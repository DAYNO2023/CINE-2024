
@{
    Layout = null;
}

<!DOCTYPE html>


<html>

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>INSPINIA | Login</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/css/animate.css" rel="stylesheet">
    <link href="~/Content/css/style.css" rel="stylesheet">
    <style>
        body {
            background-image: url('../../Content/img/gallery/exhibicion-sala-cine-sostenible.jpg');
            background-size: cover;
        }
    </style>
</head>

<body >

    <div class="middle-box text-center loginscreen animated fadeInDown">
        <div>
            <div>
                <img src="~/Content/img/ahora si.png" style="text-align: center;">

            </div>
            <h3>Welcome to 𝒞𝒾𝓃𝑒 𝓅𝓁𝓊𝓈</h3>
            <p>
                <!--Perfectly designed and precisely prepared admin theme with over 50 pages with extra new web app views.-->
                <!--Continually expanded and constantly improved Inspinia Admin Them (IN+)-->
            </p>
            <p>Login in. To see it in action.</p>
            <form class="m-t" role="form" action="@Url.Action("Login","Home")" method="post">
                <div class="form-group">
                    <input type="text" class="form-control" placeholder="Username" name="txtUser" >
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" placeholder="Password" name="txtContra" >
                </div>
                <p style="color:red;">@Html.ValidationMessage("ErrorLogin")</p>


                <button type="submit" class="btn btn-primary">Login</button>

                <a href="#"><small>Forgot password?</small></a>
                <p class="text-muted text-center"><small>Do not have an account?</small></p>
                <a class="btn btn-sm btn-white btn-block" href="register.html">Create an account</a>
            </form>
            <p class="m-t"> <small>No importan las mentiras que digas, no puedes engañar a tu propio corazón. &copy; 2024</small> </p>
        </div>
    </div>

    <!-- Mainly scripts -->
    <script src="~/Content/js/jquery-3.1.1.min.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.js"></script>

</body>

</html>