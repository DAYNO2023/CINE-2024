@model IEnumerable<Sistema_Cine.Models.tbCargos>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body"></div>



<div class="card">
    <div class="card-header">
        <h3>Cargo</h3>
    </div>
    <div class="card-body">


        <p>
            <button class="btn btn-primary" id="btnmodal">Crear</button>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example " id="tablaOne">
                <thead>


                    <tr>
                        <th>

                            @Html.DisplayNameFor(model => model.Carg_Descripcion)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Carg_Usuario_Creacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Carg_Fecha_Creacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Carg_Usuario_Modificacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Carg_Fecha_Modificacion)
                        </th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>



                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carg_Descripcion)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Carg_Usuario_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carg_Fecha_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carg_Usuario_Modificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Carg_Fecha_Modificacion)
                            </td>*@
                        <td>
                            <p class="btn btn-warning  editar-carg" data-carg-id="@item.Carg_Id">
                                Editar
                            </p>
                            @*@Html.ActionLink("Edit", "Edit", new { id = item.Carg_Id }, new { @class = "btn btn-warning" })*@ |
                            @Html.ActionLink("Details", "Details", new { id = item.Carg_Id }, new { @class = "btn btn-default" }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Carg_Id }, new { @class = "btn btn-danger" })
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<script src="~/Content/js/jquery-3.1.1.min.js"></script>
@Scripts.Render("~/bundles/jqueryval")
<script>
    $("#btnmodal").click(function () {
        $("#exampleModal").modal('show');
    })
</script>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog"  aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> <span aria-hidden="true"></span></button>
                <h5 class="modal-title">Cargo</h5>
                
            </div>
            @Html.Partial("_Create", new Sistema_Cine.Models.tbCargos());
        </div>
    </div>
</div>

<div class="modal fade" id="editModal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
                <h5 class="modal-title">Modificar Tipo Pagos</h5>
            </div>
            @Html.Partial("_Edit", new Sistema_Cine.Models.tbCargos())
        </div>
    </div>
</div>
<script>
    $(".editar-carg").click(function () {
        var TipoId = $(this).data("carg-id");
        $.ajax({
            url: "/Home/obtenerIDCarg",
            type: 'POST',
            dataType: 'json',
            contentType: "application/json; charset=utf-8",
            data: JSON.stringify({ TipoId: TipoId }),
            success: function (data) {

                console.log(data);

                $("#descripcion").val(data.description);
                $("#editModal").modal('show');

            },
        });
    });
</script>


