@model Sistema_Cine.Models.tbCargos


@using (Html.BeginForm("Edit", "tbCargos"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Editar Cargo</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Carg_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Carg_Descripcion, htmlAttributes: new { @class = "control-label " })

            @Html.EditorFor(model => model.Carg_Descripcion, new { htmlAttributes = new { @class = "form-control" ,id="descripcion" } })
            @Html.ValidationMessageFor(model => model.Carg_Descripcion, "", new { @class = "text-danger" })

        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </div>
    </div>
</div>
 
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
