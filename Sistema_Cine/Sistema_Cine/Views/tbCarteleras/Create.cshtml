@model Sistema_Cine.Models.tbCarteleras

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body"></div>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<div class="card">
    <div class="card-header">
        <h2 style="text-align:center">Nueva Cartelera</h2>
        <div class="d-flex justify-content-end">
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index")'">
                Regresar
            </button>
        </div>
    </div>

    <div class="card-body">
        <div class="container">

            <br />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row">
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Cart_Descripcion, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.Cart_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cart_Descripcion, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.Gene_Id, "Genero", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Gene_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Gene_Id, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.Prom_Id, "Promociones", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Prom_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prom_Id, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-6">
                    @Html.LabelFor(model => model.Entra_Id, "Entradas", htmlAttributes: new { @class = "control-label" })
                    @Html.DropDownList("Entra_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Entra_Id, "", new { @class = "text-danger" })

                    @Html.LabelFor(model => model.Cart_Fecha_Estreno, htmlAttributes: new { @class = "control-label" })
                    @Html.TextBoxFor(model => model.Cart_Fecha_Estreno, "{0:dd/MM/yyyy}", new { @class = "form-control", type = "date" })
                    @Html.ValidationMessageFor(model => model.Cart_Fecha_Estreno, "", new { @class = "text-danger" })
                </div>
            </div>
            <hr />
            <div class="form-group">
                <div class="col-md-offset-2 col-md-20">
                    <input type="submit" value="Guardar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
</div>
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
