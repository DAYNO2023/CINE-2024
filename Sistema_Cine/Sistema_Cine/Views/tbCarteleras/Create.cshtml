                    @Html.DropDownList("Gene_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Gene_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row gx-5">
                @Html.LabelFor(model => model.Prom_Id, "Prom_Id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-3 p-3  ">
                    @Html.DropDownList("Prom_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Prom_Id, "", new { @class = "text-danger" })
                </div>

                @Html.LabelFor(model => model.Entra_Id, "Entra_Id", htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-3 p-3 ">
                    @Html.DropDownList("Entra_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Entra_Id, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="row gx-5">
                @Html.LabelFor(model => model.Cart_Fecha_Estreno, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-3 p-3  ">
                    @Html.EditorFor(model => model.Cart_Fecha_Estreno, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Cart_Fecha_Estreno, "", new { @class = "text-danger" })
                </div>

            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-20">
                    <input type="submit" value="Crear" class="btn btn-primary" />
                </div>
                <div class="col-md-offset-2 col-md-20">
                    @Html.ActionLink("Regresar", "Index")
                </div>
            </div>

        </div>
    </div>

</div>
   

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
