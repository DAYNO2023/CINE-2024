@model Sistema_Cine.Models.tbCarteleras

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body"></div>

<div class="card">
    <div class="card-header">
        <h2 style="text-align:center">Detalle de Cartelera</h2>
        <div class="d-flex justify-content-end">
            @*<button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Edit", "Edit", new { id = Model.Sucu_Id })'">
                    Editar
                </button>*@
            @Html.ActionLink("Edit", "Edit", new { id = Model.Cart_Id }, new { @class = "btn btn-warning" })
            ||
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index")'">
                Regresar
            </button>
        </div>

    </div>

    <div class="card-body">
        <div class="container">
            <!-- Apertura del contenedor -->
            <div class="row">
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Cart_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Cart_Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Cart_Fecha_Estreno)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Cart_Fecha_Estreno)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tbEntradas.Entra_Id)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbEntradas.Entra_Id)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.tbGeneros.Gene_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbGeneros.Gene_Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tbPromociones.Prom_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbPromociones.Prom_Descripcion)
                        </dd>
                    </dl>
                </div>
            </div>
        </div>
        <table class="table table-dark">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Usuario</th>
                    <th>Fecha</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Creador</th>
                    <td>@Html.DisplayFor(model => model.Cart_Usuario_Creacion)</td>
                    <td>@Html.DisplayFor(model => model.Cart_Fecha_Creacion)</td>

                </tr>
                <tr>
                    <th scope="row">Modificar</th>
                    <td>@Html.DisplayFor(model => model.Cart_Usuario_Modificacion)</td>
                    <td>@Html.DisplayFor(model => model.Cart_Fecha_Modificacion)</td>
                </tr>
            </tbody>
        </table>
    </div>
</div>



