@model Sistema_Cine.Models.tbCarteleras

<div class="container mt-4">
    <div class="card border-bottom">
        <div class="card-body">
            <h3 class="text-danger">¿Estás segura de que quieres eliminar esto?</h3>
            <div>

                @using (Html.BeginForm("Delete", "tbCarteleras", FormMethod.Post, new { @class = "mt-3" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-12 text-right">
                            <input type="hidden" name="id" id="id" />
                            <button type="submit" class="btn btn-danger">Eliminar</button>
                            <a href="@Url.Action("Index", "tbCarteleras")" class="btn btn-secondary">Cancelar</a>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>