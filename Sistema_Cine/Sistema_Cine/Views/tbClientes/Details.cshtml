@model Sistema_Cine.Models.tbClientes

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body"></div>
<div class="card">
    <div class="card-header">
        <h2 style="text-align:center">Detalle del Cliente</h2>
        <div class="d-flex justify-content-end">
            @*<button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Edit", "Edit", new { id = Model.Clie_Id })'">
                    Editar
                </button>*@
            @Html.ActionLink("Edit", "Edit", new { id = Model.Clie_Id }, new { @class = "btn btn-warning" })
            ||
            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index")'">
                Regresar
            </button>
        </div>

    </div>

    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.Clie_Nombre)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clie_Nombre)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Clie_Apellido)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clie_Apellido)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Clie_Identidad)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clie_Identidad)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Clie_Sexo)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clie_Sexo)
                        </dd>
                    </dl>
                </div>
                <div class="col-md-6">
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Clie_Telefono)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clie_Telefono)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Clie_FecNacimiento)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Clie_FecNacimiento)
                        </dd>


                        <dt>
                            @Html.DisplayNameFor(model => model.tbEstado_Civil.Esta_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbEstado_Civil.Esta_Descripcion)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.tbMunicipio.Muni_Descripcion)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.tbMunicipio.Muni_Descripcion)
                        </dd>

                    </dl>
                </div>
            </div>
        </div>
        </div>
    </div>
        <table class="table table-striped table-bordered table-hover dataTables-example" id="tablaOne">
            <thead>
                <tr>
                    <th>Acciones</th>
                    <th>Usuario</th>
                    <th>Fecha</th>

                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">Creador</th>
                    <td>  @Html.DisplayFor(model => model.Clie_Usua_Creacion)</td>
                    <td> @Html.DisplayFor(model => model.Clie_Fecha_Creacion)</td>

                </tr>
                <tr>
                    <th scope="row">Modificar</th>
                    <td> @Html.DisplayFor(model => model.Clie_Usua_Modifica)</td>
                    <td> @Html.DisplayFor(model => model.Clie_Fecha_Modifica)</td>
                </tr>
            </tbody>
        </table>



