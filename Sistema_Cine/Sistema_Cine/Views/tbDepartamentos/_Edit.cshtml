@model Sistema_Cine.Models.tbDepartamentos


@using (Html.BeginForm("Edit", "tbDepartamentos"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Editar Departamento</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Depa_Codigo)

        <div class="form-group">
            @Html.LabelFor(model => model.Depa_Descripcion, htmlAttributes: new { @class = "control-label " })

            @Html.EditorFor(model => model.Depa_Descripcion, new { htmlAttributes = new { @class = "form-control",id= "descripcion" } })
            @Html.ValidationMessageFor(model => model.Depa_Descripcion, "", new { @class = "text-danger" })

        </div>

        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </div>
    </div>
</div>
  
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
