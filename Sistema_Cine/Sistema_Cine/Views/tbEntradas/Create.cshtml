@model Sistema_Cine.Models.tbEntradas

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
     <div class="card">
    <div class="card-body">
    <div class="container">
   

        <h2 style="text-align:center">tbEntradas</h2>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="row gx-5">
            @Html.LabelFor(model => model.Entra_Cantidad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-3 p-3">
                @Html.EditorFor(model => model.Entra_Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entra_Cantidad, "", new { @class = "text-danger" })
            </div><br />
        
            @Html.LabelFor(model => model.Sala_Id, "Sala_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-3 p-3">
                @Html.DropDownList("Sala_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sala_Id, "", new { @class = "text-danger" })
            </div>
        </div><br />
        
       
        
        <div class="form-group" style="text-align:right">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" style="text-align:center" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
     </div>
    </div>
    
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
