@model Sistema_Cine.Models.tbEntradas


@using (Html.BeginForm("Create", "tbEntradas"))
{
    @Html.AntiForgeryToken()
    <div class="card my-4">
        <div class="card-body ">
            <div class="card-header text-center">
                <h4 class="card-title">Crear Entrada</h4>
            </div>
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Entra_Cantidad, htmlAttributes: new { @class = "control-label" })
                @Html.EditorFor(model => model.Entra_Cantidad, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Entra_Cantidad, "", new { @class = "text-danger" })
            </div>

            <div class="form-group mb-3">
                @Html.LabelFor(model => model.Sala_Id, "Sala_Id", htmlAttributes: new { @class = "control-label" })
                @Html.DropDownList("Sala_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Sala_Id, "", new { @class = "text-danger" })
            </div>

            <div class="form-group text-center">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>

}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
