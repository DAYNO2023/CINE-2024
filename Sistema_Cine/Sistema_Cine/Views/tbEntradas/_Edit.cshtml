@model Sistema_Cine.Models.tbEntradas


@using (Html.BeginForm("Edit", "tbEntradas"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Editar Entradas</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Entra_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Entra_Cantidad, htmlAttributes: new { @class = "control-label " })
        
                @Html.EditorFor(model => model.Entra_Cantidad, new { htmlAttributes = new { @class = "form-control",id="cantidad" } })
                @Html.ValidationMessageFor(model => model.Entra_Cantidad, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Sala_Id, "Sala_Id", htmlAttributes: new { @class = "control-label " })
            
                @Html.DropDownList("Sala_Id", null, htmlAttributes: new { @class = "form-control",id="salas" })
                @Html.ValidationMessageFor(model => model.Sala_Id, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </div>
    </div>
</div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
