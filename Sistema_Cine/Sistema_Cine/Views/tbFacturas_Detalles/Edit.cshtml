@model Sistema_Cine.Models.tbFacturas_Detalles

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card" style="max-width: 800px; margin: auto;">
        <div class="card-header bg-light">
            <h2 style="text-align:center; margin-bottom: 0;">Factura</h2>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index")'">
                    Regresar
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="container">
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Fade_Id)
            <div class="row">
                <div class="col-sm-3">
                    @Html.LabelFor(model => model.Fact_Id, "FacturaEnca", htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.DropDownList("Fact_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Fact_Id, "", new { @class = "text-danger" })

                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(model => model.Cart_Id, "Cartelera", htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.DropDownList("Cart_Id", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Cart_Id, "", new { @class = "text-danger" })

                </div>

                <div class="col-sm-6">
                    @Html.LabelFor(model => model.Fade_ticket, htmlAttributes: new { @class = "control-label col-md-2" })

                    @Html.EditorFor(model => model.Fade_ticket, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Fade_ticket, "", new { @class = "text-danger" })

                </div>
            </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Save" class="btn btn-warning" />
                        </div>
                    </div>
               </div>
            </div>
    </div>
}

<div>
    @Html.ActionLink("Regresar", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
