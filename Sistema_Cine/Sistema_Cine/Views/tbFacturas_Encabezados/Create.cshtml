@model Sistema_Cine.Models.tbFacturas_Encabezados

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body"></div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="card" style="max-width: 800px; margin: auto;">
        <div class="card-header bg-light">
            <h2 tyle="text-align:center; margin-bottom: 0;">Factura Encabezado</h2>
            <div class="d-flex justify-content-end">
                <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Index")'">
                    Regresar
                </button>
            </div>
        </div>
        <div class="card-body">
            <div class="container">
                <br />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="row">
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.Fact_Fecha, htmlAttributes: new { @class = "control-label " })
                        @Html.EditorFor(model => model.Fact_Fecha, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.Fact_Fecha, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.Clie_Id, "Cliente", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Clie_Id", null, htmlAttributes: new { @class = "form-control", id = "dniInput" })
                        @Html.ValidationMessageFor(model => model.Clie_Id, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-3">
                        <label for="nombreCliente" class="control-label">Nombre</label>
                        <input type="text" id="nombreCliente" class="form-control" readonly />
                    </div>

                    <div class="col-sm-3">
                        @Html.LabelFor(model => model.Empl_Id, "Empleado", htmlAttributes: new { @class = "control-label " })

                        @Html.DropDownList("Empl_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Empl_Id, "", new { @class = "text-danger" })
                    </div>
                    <div class="col-sm-3">

                        @Html.LabelFor(model => model.Tipo_Id, "Tipo de pago", htmlAttributes: new { @class = "control-label " })

                        @Html.DropDownList("Tipo_Id", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Tipo_Id, "", new { @class = "text-danger" })

                    </div>
                    <div class="col-sm-4">
                        @Html.LabelFor(model => model.Prom_Id, "Promociones", htmlAttributes: new { @class = "control-label" })
                        @Html.DropDownList("Prom_Id", null, htmlAttributes: new { @class = "form-control", id = "promocionesDropDown" })
                        @Html.ValidationMessageFor(model => model.Prom_Id, "", new { @class = "text-danger" })
                    </div>

                    <div class="col-sm-3">
                        <label for="precioPromocion" class="control-label">Precio</label>
                        <input type="text" id="precioPromocion" class="form-control" readonly />
                    </div>
                </div>
                <hr />
                <div class="row mt-4" style="text-align:right">
                    <div class="col-md-offset-2 col-sm-20">
                        <button id="btnAgregar" class="btn btn-primary">Agregar</button>
                    </div>
                </div>
            </div>


        </div>
    </div>

    <hr />


}
<div class="row mt-4" style="text-align:right">
    <div class="col-md-offset-2 col-sm-20">
        <button id="btnMostrarDetalle" class="btn btn-primary" data-toggle="collapse" data-target="#collapseFacturaDetalle">Mostrar Detalle</button>
    </div>
</div>






<hr />

<div class="collapse" id="collapseFacturaDetalle">
    <div class="col-sm-3">
        <div class="form-group mb-0">
            <label for="txtTicket" class="col-form-label col-form-label-sm">Ticket:</label>
            <input type="text" class="form-control form-control-sm model" id="txtTicket" name="ticket" autocomplete="off">
        </div>
    </div>

    <div class="col-sm-3">
        <div class="form-group mb-0">
            <label for="txtCartelera" class="col-form-label col-form-label-sm">Cartelera:</label>
            <input type="text" class="form-control form-control-sm model" id="txtCartelera" name="cartelera" autocomplete="off">
        </div>
    </div>

    <input type="hidden" id="factura" name="factura" />
    <input type="hidden" id="precio" name="precio" />
    <input type="hidden" id="total" name="total" />

    <div class="col-sm-3">
        <div class="form-group mb-0">
            <label for="txtproductoprecio" class="col-form-label col-form-label-sm">Precio:</label>
            <input type="text" class="form-control form-control-sm model" readonly id="txtproductoprecio" name="precio">
        </div>
    </div>

    <div class="col-sm-3">
        <div class="form-group mb-0">
            <label for="txttotal" class="col-form-label col-form-label-sm">Total:</label>
            <input type="text" class="form-control form-control-sm model" readonly id="txttotal" name="total">
        </div>
    </div>
    <button type="button" class="btn btn-danger btnIngresar">
        Ingresar
    </button>

</div>


















<div class="container">
    <div class="card">
        <div class="card-header">
            <h3> Factura detalle</h3>
        </div>
        <div class="card-body">
            @if (ViewBag.FacturaDetalleList != null && ((List<Sistema_Cine.Models.tbFacturas_Detalles>)ViewBag.FacturaDetalleList).Count > 0)
            {

                <table class="table table-striped table-bordered table-hover dataTables-example " id="tablaOne">
                    <thead>
                        <tr>
                            <th>Ticket</th>
                            <th>Cartelera</th>
                            <th>Factura</th>
                            <th>Cantidad</th>
                            
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var detalle in (List<Sistema_Cine.Models.tbFacturas_Detalles>)ViewBag.FacturaDetalleList)
                        {
                            <tr>
                                <td>@detalle.Fade_ticket</td>
                                <td>@detalle.tbCarteleras.Cart_Descripcion</td>
                                <td>@detalle.tbFacturas_Encabezados.Fact_Id</td>
                                <td>300</td>
                                
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No hay factura deatlle</p>
            }
        </div>
    </div>
</div>
















@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#dniInput').on('change', function () {
            var dni = $(this).val();
            if (dni) {
                $.ajax({
                    url: '/tbFacturas_Encabezados/ObtenerNombreCliente',
                    method: 'GET',
                    data: { dni: dni },
                    success: function (response) {
                        $('#nombreCliente').val(response.nombre);
                    },
                    error: function (xhr, status, error) {
                        var errorMessage = xhr.status + ': ' + xhr.statusText;
                        $('#nombreCliente').val('Error al obtener el cliente: ' + errorMessage);
                    }
                });
            } else {
                $('#nombreCliente').val('');
            }
        });
    });


    $(document).ready(function () {
        $("#promocionesDropDown").change(function () {
            var promocionId = $(this).val();

            $.ajax({
                url: '/tbPromociones/ObtenerPrecioPorDescripcion',
                type: 'GET',
                data: { descripcionId: promocionId },
                success: function (data) {
                    $("#precioPromocion").val(data.precio);
                },
                error: function () {
                    alert("Error al obtener el precio de la promoción.");
                }
            });
        });
    });



    $(document).ready(function () {
        // Función para mostrar el collapse
        function mostrarCollapse() {
            $('#collapseFacturaDetalle').collapse('show');
        }

        // Evento clic para el botón "Agregar"
        $('#btnAgregar').on('click', function () {
            mostrarCollapse();
        });
    });




</script>