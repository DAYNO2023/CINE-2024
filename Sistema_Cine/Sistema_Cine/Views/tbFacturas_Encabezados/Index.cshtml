@model IEnumerable<Sistema_Cine.Models.tbFacturas_Encabezados>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Crear", "Create")
</p>
<div class="table-responsive">
    <table class="table table-striped table-bordered table-hover dataTables-example ">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Fact_Fecha)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fact_Usua_Creacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fact_Fecha_Creacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fact_Usua_Modifica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fact_Fecha_Modifica)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fact_Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbClientes.Clie_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbEmpleados.Empl_Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbPromociones.Prom_Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.tbTipo_Pagos.Tipo_Descripcion)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Fact_Fecha)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fact_Usua_Creacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fact_Fecha_Creacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fact_Usua_Modifica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fact_Fecha_Modifica)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fact_Estado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbClientes.Clie_Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbEmpleados.Empl_Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbPromociones.Prom_Descripcion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.tbTipo_Pagos.Tipo_Descripcion)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Fact_Id }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Fact_Id }, new { @class = "btn btn-default" }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Fact_Id }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>
