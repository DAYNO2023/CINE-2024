@model Sistema_Cine.Models.tbGeneros


@using (Html.BeginForm("Create", "tbGeneros")) 
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">crear Genero</h4>
        </div>


        <h4>Generos</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Gene_Descripcion, htmlAttributes: new { @class = "control-label " })
      >
                @Html.EditorFor(model => model.Gene_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Gene_Descripcion, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Prom_Id, "Prom_Id", htmlAttributes: new { @class = "control-label " })
            
                @Html.DropDownList("Prom_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Prom_Id, "", new { @class = "text-danger" })
          
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
   
    
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
