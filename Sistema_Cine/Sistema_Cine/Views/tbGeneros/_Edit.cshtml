@model Sistema_Cine.Models.tbGeneros


@using (Html.BeginForm("Edit", "tbGeneros"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Editar Genero</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Gene_Id)


        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Gene_Descripcion, htmlAttributes: new { @class = "control-label" })
            @Html.EditorFor(model => model.Gene_Descripcion, new { htmlAttributes = new { @class = "form-control", id = "descripcion" } })
            @Html.ValidationMessageFor(model => model.Gene_Descripcion, "", new { @class = "text-danger" })

        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Prom_Id, "Promociones", htmlAttributes: new { @class = "control-label", })
            @Html.DropDownList("Prom_Id", null, htmlAttributes: new { @class = "form-control", id = "promocion" })
            @Html.ValidationMessageFor(model => model.Prom_Id, "", new { @class = "text-danger" })

        </div>




        <div class="form-group text-center">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Guardar" class="btn btn-warning" />
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
