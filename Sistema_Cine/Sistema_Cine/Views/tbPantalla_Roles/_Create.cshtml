@model Sistema_Cine.Models.tbPantalla_Roles


@using (Html.BeginForm("Create", "tbPantalla_Roles")) 
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">crear Pantalla por roles</h4>
        </div>


        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
