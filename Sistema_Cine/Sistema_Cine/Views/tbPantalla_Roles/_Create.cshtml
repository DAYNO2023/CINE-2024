@model Sistema_Cine.Models.tbPantalla_Roles


@using (Html.BeginForm("Create", "tbPantalla_Roles")) 
{
    @Html.AntiForgeryToken()
<div class="card-body">
    <div class="container">


        <h4 style="text-align:center">Crear Pantalla_Roles</h4><br />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Role_Id, "Role_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-6">
                @Html.DropDownList("Role_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Role_Id, "", new { @class = "text-danger" })
            </div><br />

            @Html.LabelFor(model => model.Pant_Id, "Pant_Id", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-6">
                @Html.DropDownList("Pant_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Pant_Id, "", new { @class = "text-danger" })
            </div>
        </div><br />


        <div class="form-group" style="text-align:right">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" style="text-align:center" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
