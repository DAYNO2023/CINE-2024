@model IEnumerable<Sistema_Cine.Models.tbPantallas>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="card-body"></div>
<div class="card">
    <div class="card-header">
        <h3>Pantalla</h3>
    </div>
    <div class="card-body">


        <p>
            <button class="btn btn-primary" id="btnmodal">Crear</button>
        </p>
        <hr />
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example " id="tablaOne">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Pant_Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pant_Identificador)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Pant_Creacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pant_Fecha_Creacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pant_Modifica)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pant_Fecha_Modifica)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Pant_Estado)
                        </th>*@
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pant_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pant_Identificador)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Pant_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pant_Fecha_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pant_Modifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pant_Fecha_Modifica)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pant_Estado)
                            </td>*@
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Pant_Id }, new { @class = "btn btn-warning" }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Pant_Id }, new { @class = "btn btn-default" }) |
                            <p class="btn btn-danger" id="elimnartipo" onclick="elimnartipo('@item.Pant_Id')">
                                Eliminar
                            </p>
                            @*@Html.ActionLink("Delete", "Delete", new { id = item.Pant_Id }, new { @class = "btn btn-danger" })*@
                        </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>
<script src="~/Content/js/jquery-3.1.1.min.js"></script>
@Scripts.Render("~/bundles/jqueryval")
<script>
    $("#btnmodal").click(function () {
        $("#exampleModal").modal('show');
    })

    function elimnartipo(id) {
        $("#elimnarmodal").modal('show')
        $("#id").val(id);
    }
</script>

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"> <span aria-hidden="true"></span></button>
                

            </div>
            @Html.Partial("_Create", new Sistema_Cine.Models.tbPantallas())
        </div>
    </div>
</div>


<div class="modal fade" id="elimnarmodal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
            </div>
            @Html.Partial("_Delete", new Sistema_Cine.Models.tbPantallas())
        </div>
    </div>
</div>