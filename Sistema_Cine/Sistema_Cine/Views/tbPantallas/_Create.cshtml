@model Sistema_Cine.Models.tbPantallas


@using (Html.BeginForm("Create", "tbPantallas")) 
{
    @Html.AntiForgeryToken()
  
    <div class="form-group" style="background-color:darkred">
   

        <h4>tbPantallas</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Pant_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Pant_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pant_Descripcion, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.Pant_Identificador, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-6">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pant_Identificador)
                    @Html.ValidationMessageFor(model => model.Pant_Identificador, "", new { @class = "text-danger" })
                </div>
            </div>
        </div><br />
        
       
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
    
}

