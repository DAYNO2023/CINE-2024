@model Sistema_Cine.Models.tbPantallas


@using (Html.BeginForm("Create", "tbPantallas")) 
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Crear Pantallas</h4>
        </div>


        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Pant_Descripcion, htmlAttributes: new { @class = "control-label " })
          
                @Html.EditorFor(model => model.Pant_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Pant_Descripcion, "", new { @class = "text-danger" })
        
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Pant_Identificador, htmlAttributes: new { @class = "control-label " })
           
                <div class="checkbox">
                    @Html.EditorFor(model => model.Pant_Identificador, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Pant_Identificador, "", new { @class = "text-danger" })
                </div>
           
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>
 
}

