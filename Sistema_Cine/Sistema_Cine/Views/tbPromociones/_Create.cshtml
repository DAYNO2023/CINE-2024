@model Sistema_Cine.Models.tbPromociones


@using (Html.BeginForm("Create", "tbPromociones"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Crear Promociones</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Prom_Descuento, htmlAttributes: new { @class = "control-label " })
            
                @Html.EditorFor(model => model.Prom_Descuento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prom_Descuento, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Prom_Descripcion, htmlAttributes: new { @class = "control-label " })
            
                @Html.EditorFor(model => model.Prom_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prom_Descripcion, "", new { @class = "text-danger" })
      
        </div>



        <div class="form-group">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </div>
    </div>
</div>

    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
