            </div>
        </div><br />
   
        
        
        <div class="form-group">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
   
    
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
