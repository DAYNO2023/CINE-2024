@model Sistema_Cine.Models.tbPromociones


@using (Html.BeginForm("Create", "tbPromociones"))
{
    @Html.AntiForgeryToken()
   
    <div class="form-group" style="background-color:darkred">
   

        <h4>tbPromociones</h4>
        
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Prom_Descuento, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Prom_Descuento, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Prom_Descuento, "", new { @class = "text-danger" })
            </div>
        
            @Html.LabelFor(model => model.Prom_Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-sm-6">
                @Html.EditorFor(model => model.Prom_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
