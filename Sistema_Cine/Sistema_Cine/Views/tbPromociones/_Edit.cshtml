@model Sistema_Cine.Models.tbPromociones


@using (Html.BeginForm("Edit", "tbPromociones"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Editar Promociones</h4>
        </div>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Prom_Id)

        <div class="form-group">
            @Html.LabelFor(model => model.Prom_Descuento, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Prom_Descuento, new { htmlAttributes = new { @class = "form-control",id="descuento" } })
                @Html.ValidationMessageFor(model => model.Prom_Descuento, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prom_Descripcion, htmlAttributes: new { @class = "control-label " })
                @Html.EditorFor(model => model.Prom_Descripcion, new { htmlAttributes = new { @class = "form-control", id = "descripcion" } })
                @Html.ValidationMessageFor(model => model.Prom_Descripcion, "", new { @class = "text-danger" })
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prec_Id, "Prec_Id", htmlAttributes: new { @class = "control-label ", id = "prec" })
           
                @Html.DropDownList("Prec_Id", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Prec_Id, "", new { @class = "text-danger" })
            
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </div>
    </div>
</div>

}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
