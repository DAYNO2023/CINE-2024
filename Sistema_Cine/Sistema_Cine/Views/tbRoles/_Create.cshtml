@model Sistema_Cine.Models.tbRoles


@using (Html.BeginForm("Create", "tbRoles"))
{
    @Html.AntiForgeryToken()
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Crear Roles</h4>
        </div>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Role_Descripcion, htmlAttributes: new { @class = "control-label " })
          
                @Html.EditorFor(model => model.Role_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Role_Descripcion, "", new { @class = "text-danger" })
           
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-6">
                <button type="submit" class="btn btn-primary">Guardar</button>
            </div>
        </div>
    </div>
</div>
   


}


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
