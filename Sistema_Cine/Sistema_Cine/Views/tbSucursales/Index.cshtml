@model IEnumerable<Sistema_Cine.Models.tbSucursales>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card-body"></div>


<div class="card">
    <div class="card-header">
        <h3>Sucursal</h3>
    </div>
    <div class="card-body">
        <p>
            @Html.ActionLink("Crear", "Create", null, new { @class = "btn btn-primary" })
        </p>
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover dataTables-example " id="tablaOne">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Sucu_Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sucu_Direccion)
                        </th>
                        @*<th>
                            @Html.DisplayNameFor(model => model.Sucu_Usuario_Creacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sucu_Fecha_Creacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sucu_Usuario_Modificacion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.Sucu_Fecha_Modificacion)
                        </th>*@
                        <th>
                            @Html.DisplayNameFor(model => model.tbCarteleras.Cart_Descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tbEntradas.Entra_Cantidad)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.tbMunicipio.Muni_Descripcion)
                        </th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucu_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucu_Direccion)
                            </td>
                            @*<td>
                                @Html.DisplayFor(modelItem => item.Sucu_Usuario_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucu_Fecha_Creacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucu_Usuario_Modificacion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Sucu_Fecha_Modificacion)
                            </td>*@
                            <td>
                                @Html.DisplayFor(modelItem => item.tbCarteleras.Cart_Descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbEntradas.Entra_Cantidad)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.tbMunicipio.Muni_Descripcion)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.Sucu_Id }, new { @class = "btn btn-warning" }) |
                                @Html.ActionLink("Details", "Details", new { id = item.Sucu_Id }, new { @class = "btn btn-default" }) |
                                <p class="btn btn-danger" id="elimnartipo" onclick="elimnartipo('@item.Sucu_Id')">
                                    Eliminar
                                </p>
                                @*@Html.ActionLink("Delete", "Delete", new { id = item.Sucu_Id }, new { @class = "btn btn-danger" })*@
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    </div>
</div>

<div class="modal fade" id="elimnarmodal" tabindex="-1" role="dialog" aria-hidden="false">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">

                <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true"></span></button>
            </div>
            @Html.Partial("_Delete", new Sistema_Cine.Models.tbSucursales())
        </div>
    </div>
</div>


<script>
    $("#btnmodal").click(function () {
        $("#exampleModal").modal('show');
    })
    //$("#bteditar").click(function () {
    //    $("#exampleModal").modal('show');
    //})
    function elimnartipo(id) {
        $("#elimnarmodal").modal('show')
        $("#id").val(id);
    }

</script>

