@model Sistema_Cine.Models.tbTipo_Pagos

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/jqueryval")


@using (Html.BeginForm("Create", "tbTipo_Pagos"))
{
    @Html.AntiForgeryToken()
  
<div class="card my-4">
    <div class="card-body ">
        <div class="card-header text-center">
            <h4 class="card-title">Crear Tipo de pago</h4>
        </div>
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group mb-3">
            @Html.LabelFor(model => model.Tipo_Descripcion, htmlAttributes: new { @class = "control-label " })
            
                @Html.EditorFor(model => model.Tipo_Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Tipo_Descripcion, "", new { @class = "text-danger" })
          
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-20">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </div>
    </div>
    </div>
    }

